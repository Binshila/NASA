@model NASAWebApp.Models.EarthAssetModels.EarthAsset

@{
    ViewData["Title"] = "Earth Asset";
}

<h1>Earth Asset Viewer</h1>

<form method="post">
    <label for="date">Enter a Date (YYYY-MM-DD):</label>
    <input type="date" id="date" name="date" required />
    <button type="submit">Get Earth Asset</button>
</form>

@if (Model != null)
{
    <div>
        <h2>Earth Asset Data</h2>
        <p><strong>Date:</strong> @Model.Date</p>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Dataset:</strong> @Model.Resource?.Dataset</p>
        <p><strong>Planet:</strong> @Model.Resource?.Planet</p>
        <p><strong>Service Version:</strong> @Model.ServiceVersion</p>
        <h3>Earth Image:</h3>
        <img src="@Model.Url" alt="Earth Asset Image" style="max-width: 50%; height: auto;border:5px solid #000000; padding:3px; margin:5px " />
    </div>
}

@if (ViewData["Error"] != null)
{
    <div style="color: red;">
        <p>@ViewData["Error"]</p>
    </div>
}
